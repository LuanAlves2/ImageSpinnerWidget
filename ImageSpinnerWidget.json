{
  "id": "com.sap.custom.ImageSpinnerWidget",
  "name": "Image Spinner Widget",
  "description": "A custom widget that displays a rotating image as a loading spinner",
  "version": "1.0.0",
  "newInstancePrefix": "ImageSpinner",
  "icon": "data:image/svg+xml;base64,",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-sap-custom-image-spinner-widget",
      "url": "https://raw.githubusercontent.com/LuanAlves2/ImageSpinnerWidget/main/ImageSpinnerWidget.js",
      "integrity": ""
    },
    {
      "kind": "builder",
      "tag": "com-sap-custom-image-spinner-widget-builder",
      "url": "https://raw.githubusercontent.com/LuanAlves2/ImageSpinnerWidget/main/ImageSpinnerWidget_Builder.js",
      "integrity": ""
    }
  ],
  "properties": {
    "imageUrl": {
      "type": "string",
      "description": "URL of the image to display as spinner"
    },
    "spinnerSize": {
      "type": "number",
      "description": "Size of the spinner in pixels"
    },
    "rotationSpeed": {
      "type": "number",
      "description": "Speed of rotation in seconds"
    },
    "showText": {
      "type": "boolean",
      "description": "Whether to show loading text"
    },
    "loadingText": {
      "type": "string",
      "description": "Text to display during loading"
    },
    "backgroundColor": {
      "type": "string",
      "description": "Background color of the overlay"
    },
    "loadingDuration": {
      "type": "number",
      "description": "How long to show the loading spinner in milliseconds"
    }
  },
  "events": {
    "loadingComplete": {
      "description": "Fired when loading is complete"
    },
    "loadingStart": {
      "description": "Fired when loading starts"
    }
  },
  "methods": {
    "startLoading": {
      "description": "Start the loading spinner"
    },
    "stopLoading": {
      "description": "Stop the loading spinner"
    },
    "setLoadingDuration": {
      "description": "Set the loading duration in milliseconds",
      "parameters": [
        {
          "name": "duration",
          "type": "number",
          "description": "Duration in milliseconds"
        }
      ]
    }
  }
}
