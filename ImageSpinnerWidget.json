{
    "id": "com.luanarantes.sap.imagespinnerwidget",
    "version": "1.0.0",
    "name": "Image Spinner Widget",
    "description": "A custom widget that displays a rotating image as a loading spinner in SAP Analytics Cloud",
    "newInstancePrefix": "ImageSpinner",
    "vendor": "Luan Arantes",
    "eula": "",
    "license": "MIT",
    "icon": "https://raw.githubusercontent.com/LuanAlves2/ImageSpinnerWidget/main/icon.png",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "com-luanarantes-sap-imagespinnerwidget",
            "url": "https://raw.githubusercontent.com/LuanAlves2/ImageSpinnerWidget/main/ImageSpinnerWidget.js",
            "integrity": "sha384-43ED9952C74DE41B9C69A0D598830BFC391D0CEDFB67E119E5D312D9A361B703459",
            "ignoreIntegrity": true
        },
        {
            "kind": "builder",
            "tag": "com-luanarantes-sap-imagespinnerwidget-builder",
            "url": "https://raw.githubusercontent.com/LuanAlves2/ImageSpinnerWidget/main/ImageSpinnerWidget_Builder.js",
            "integrity": "sha384-5BE979F33AF9D63DA83588CF2FE18A1CE2763D713A1CD6990907769DB4475C40F97",
            "ignoreIntegrity": true
        }
    ],
    "properties": {
        "imageUrl": {
            "description": "Image URL for spinner",
            "type": "string",
            "default": "https://raw.githubusercontent.com/LuanAlves2/ImageSpinnerWidget/main/Alex.jpeg"
        },
        "spinnerSize": {
            "description": "Spinner Size in pixels",
            "type": "integer",
            "default": 80
        },
        "rotationSpeed": {
            "description": "Rotation Speed in seconds",
            "type": "number",
            "default": 2
        },
        "showText": {
            "description": "Show Loading Text",
            "type": "boolean",
            "default": true
        },
        "loadingText": {
            "description": "Loading Text",
            "type": "string",
            "default": "Carregando..."
        },
        "backgroundColor": {
            "description": "Background Color",
            "type": "string",
            "default": "rgba(255, 255, 255, 0.9)"
        },
        "loadingDuration": {
            "description": "Loading Duration in milliseconds",
            "type": "integer",
            "default": 3000
        }
    },
    "methods": {
        "setImageUrl": {
            "description": "Set Image URL",
            "parameters": [
                {
                    "name": "imageUrl",
                    "type": "string",
                    "description": "Image URL"
                }
            ],
            "body": "this.imageUrl = imageUrl;"
        },
        "getImageUrl": {
            "returnType": "string",
            "description": "Return Image URL",
            "body": "return this.imageUrl;"
        },
        "setSpinnerSize": {
            "description": "Set Spinner Size",
            "parameters": [
                {
                    "name": "spinnerSize",
                    "type": "integer",
                    "description": "Spinner Size in pixels"
                }
            ],
            "body": "this.spinnerSize = spinnerSize;"
        },
        "getSpinnerSize": {
            "returnType": "integer",
            "description": "Return Spinner Size",
            "body": "return this.spinnerSize;"
        },
        "setRotationSpeed": {
            "description": "Set Rotation Speed",
            "parameters": [
                {
                    "name": "rotationSpeed",
                    "type": "number",
                    "description": "Rotation Speed in seconds"
                }
            ],
            "body": "this.rotationSpeed = rotationSpeed;"
        },
        "getRotationSpeed": {
            "returnType": "number",
            "description": "Return Rotation Speed",
            "body": "return this.rotationSpeed;"
        },
        "startLoading": {
            "description": "Start Loading Spinner",
            "body": "this.startLoading();"
        },
        "stopLoading": {
            "description": "Stop Loading Spinner",
            "body": "this.stopLoading();"
        }
    },
    "events": {
        "loadingStart": {
            "description": "Loading started"
        },
        "loadingComplete": {
            "description": "Loading completed"
        }
    }
}